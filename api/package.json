{
    "name": "ma-project-api",
    "main": "src/server.ts",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "lint": "tslint -c tslint.json -p tsconfig.json --fix",
        "test:dev": "jest --no-cache --watch --passWithNoTests",
        "test": "jest --no-cache --silent --passWithNoTests",
        "prebuild": "npm run lint",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node dist/server.js"
    },
    "author": "Dmitry Kit",
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/node": "^13.7.7",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "ts-node": "^8.6.2",
        "tslint": "^6.0.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "sequelize": "^5.21.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run test && cd .. && git add ."
        }
    }
}
