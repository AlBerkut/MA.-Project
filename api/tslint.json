{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-config-airbnb", "prettier"],
    "jsRules": {},
    "rules": {
        "no-console": "off",
        "no-debugger": "off",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "ter-indent": [true, 4, { "SwitchCase": 1 }],
        "quotes": ["warn", "single"],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "all"
            }
        ]
    },
    "rulesDirectory": []
}
